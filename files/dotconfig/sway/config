exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

set $mod Mod4

xwayland disable

output "*" bg /home/akos/Dropbox/stuff/other/misc/wallpaper.jpg fill

exec google-chrome-stable --no-startup-window --enable-features=UseOzonePlatform --ozone-platform=wayland

bindsym $mod+q kill

bindsym $mod+Return exec kitty

bindsym $mod+d exec wofi --show drun --style=/home/akos/.config/wofi/wofi.css --width 500 --prompt="" --insensitive --hide-scroll --lines 5

bindsym $mod+u exec kitty zsh /home/akos/.config/upgrade.sh

bindsym $mod+c exec google-chrome-stable --enable-features=UseOzonePlatform --ozone-platform=wayland
bindsym $mod+i exec google-chrome-stable --incognito --enable-features=UseOzonePlatform --ozone-platform=wayland
bindsym $mod+p exec pcmanfm --new-win
bindsym $mod+s exec subl --launch-or-new-window
bindsym $mod+a exec atril

bindsym Print exec grim screenshot.png

bindsym $mod+Escape       	exec sh /home/akos/.config/lock-screen.sh
bindsym $mod+Shift+Escape	exec systemctl poweroff --ignore-inhibitors
bindsym $mod+Shift+Delete	exec systemctl reboot --ignore-inhibitors

bindsym $mod+Shift+s		output eDP-1 toggle

bindsym $mod+Left		focus left
bindsym $mod+Down		focus down
bindsym $mod+Up			focus up
bindsym $mod+Right		focus right

bindsym $mod+Shift+Left		move left
bindsym $mod+Shift+Down		move down
bindsym $mod+Shift+Up		move up
bindsym $mod+Shift+Right	move right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+1 workspace 1
